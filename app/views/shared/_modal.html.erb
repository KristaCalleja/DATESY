<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#matchModal">
  Match!
</button>

<div class="modal fade" id="matchModal" tabindex="-1" role="dialog" aria-labelledby="matchModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="matchModalLabel">Why are you recommending?</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= simple_form_for [@friend, @match], url: user_friend_matches_path do |f| %>
          <%= f.input :content, label: 'Write a message to your friend' %>
          <%= f.input :matchee_id, as: :hidden, input_html: { value: matchee.id } %>
          <%= f.input :status, as: :hidden, input_html: { value: 'matchmaker_matched' } %>
          <%= f.button :submit, 'Send now!', class: "button" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
